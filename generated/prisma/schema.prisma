model Computer {
  id         Int    @id @default(autoincrement())
  adresseMac String

  user      User @relation(fields: [companyId], references: [id])
  companyId Int

  employe   Employe? @relation(fields: [employeId], references: [id])
  employeId Int?     @unique
}

model Employe {
  id        Int    @id @default(autoincrement())
  lastName  String
  firstName String
  mail      String
  password  String

  user      User @relation(fields: [companyId], references: [id])
  companyId Int

  computer Computer?
}

model User {
  id           Int     @id @default(autoincrement())
  companyName  String
  siretNumber  String  @unique
  password     String
  directorName String?

  employes  Employe[]
  computers Computer[]
}

